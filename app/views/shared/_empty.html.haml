- assets = controller_name
- asset = assets.singularize
#empty
  - if @current_query.blank?
    - if can?(:create, asset)
      == #{t(:could_not_find, t(assets.downcase.singularize).downcase)} #{link_to_inline(:"create_#{asset}", path_to_new, :plain => true, :text => t('create_' + asset).downcase)}.
    - else
      == #{t(:could_not_find, t(assets.downcase.singularize).downcase)}.
  - else
    == #{t(:could_not_find_matching, t(assets.downcase + '_small'))} <span class="cool"><b>#{h @current_query}</b></span>; #{t :please_retry}
