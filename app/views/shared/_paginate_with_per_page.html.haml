= image_tag("loading.gif", size: 'thumb', class: "spinner", style: "display: none;")
= paginate

.per_page_options
  %span.per_page_label
    = t('entities_per_page', :entity => t(controller_name))

  - [ 10, 20, 30, 50 ].each do |count|
    - if count == @per_page.to_i
      %em.current= count
    - else
      = link_to count, url_for(controller: controller.controller_path, action: :redraw, only_path: true, per_page: count, query: params[:query], q: params[:q]), remote: true
